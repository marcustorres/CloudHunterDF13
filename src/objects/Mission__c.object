    <fields>
        <fullName>Current_Point_Value__c</fullName>
        <description>Calculates the current value of the mission with a time-decay algorithm from the point the mission was started. The minimum value for any mission is 10% of the max points.</description>
        <externalId>false</externalId>
        <formula>if( ( now()-Mission_Start_Time__c )*1440 &lt; 60, 
	1*Max_Point_Value__c, 
	if( ( now()-Mission_Start_Time__c )*1440 &lt; 120, 
		0.9*Max_Point_Value__c, 
		if( ( now()-Mission_Start_Time__c )*1440 &lt; 240, 
			0.75* Max_Point_Value__c, 
			if( ( now()-Mission_Start_Time__c )*1440 &lt; 480, 
				0.6* Max_Point_Value__c, 
				if( ( now()-Mission_Start_Time__c )*1440 &lt; 960, 
					0.5* Max_Point_Value__c, 
					if( ( now()-Mission_Start_Time__c )*1440 &lt; 1440, 
						0.25* Max_Point_Value__c, 
						0.1* Max_Point_Value__c 
					)
				)
			)
		)
	)
)</formula>
        <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
        <label>Current Point Value</label>
        <precision>18</precision>
        <required>false</required>
        <scale>4</scale>
        <type>Number</type>
        <unique>false</unique>
    </fields>
